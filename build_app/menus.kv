<TitleNode>:
    orientation: 'horizontal'
    size_hint_y: None
    height: 48
    Label:
        text: "Filename"
    Label:
        text: "Build"
        size_hint_x: 0.3
    Label:
        text: "Compiled"
        size_hint_x: 0.3
        

<WrapperFileNode>:
    orientation: 'horizontal'
    size_hint_y: None
    height: 48
    Label:
        text: root.text
        font_size: 20
        text_size: self.size
        valign: "center"
    Widget:
        id: build_label
        size_hint_x: 0.3
        canvas:
            Rectangle:
                pos: self.x + ((self.width - 28)/2) , self.y + ((self.height - 28)/2)
                #pos: self.pos
                size: 28,28
                texture: root.build_tex
    Widget:
        id: compile_label
        size_hint_x: 0.3
        canvas:
            Rectangle:
                pos: self.x + ((self.width - 28)/2) , self.y + ((self.height - 28)/2)
                size: 28,28
                texture: root.compiled_tex
    # CheckBox:
    #     canvas.before:
    #         Rectangle: 
    #             pos: self.pos
    #             size: self.size
        
        

<MainMenu>:
    project_view: project_view
    build_log: build_log
    BoxLayout:
        TreeView:
            id: project_view
            hide_root: True
            size_hint_x: 0.5
        BoxLayout:
            orientation: 'vertical'
            BoxLayout:
                size_hint_y: 0.33   
                GridLayout:
                    rows: 2
                    cols: 2
                    
                    Button:
                        text: "Update Build"
                        on_release: app.build_selected(app.selected_py)
                    Button:
                        text: "Update All Builds"
                        on_release: app.build_all_updates()
                    Button:
                        text: "Compile Selected"
                        on_release: app.compile_selected(app.selected_py)
                    Button:
                        text: "Compile All Updates"
                        on_release: app.compile_all_updates()
                Label:
            ScreenManager:
                id: sub_screen1
                Screen:
                    name: "code_screen"
                    CodeInput:
                        id: py_code
                Screen:
                    name: "log_screen"
                    TextInput:
                        id: build_log
                        background_color: [0, 0, 0, 1]
                        foreground_color: [0, 1, 0, 1]
                        readonly: True